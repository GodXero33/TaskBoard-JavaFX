<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="root" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="godxero.control.LoginFormController">
   <children>
      <Label alignment="CENTER" prefHeight="77.0" prefWidth="600.0" text="Login">
         <font>
            <Font name="Agency FB Bold" size="60.0" />
         </font>
      </Label>
      <Label alignment="CENTER_RIGHT" layoutX="28.0" layoutY="142.0" prefHeight="40.0" prefWidth="186.0" styleClass="label-normal" text="User Name">
         <font>
            <Font name="Agency FB Bold" size="60.0" />
         </font>
      </Label>
      <TextField fx:id="loginUserNameTextField" layoutX="227.0" layoutY="142.0" onKeyPressed="#loginUserNameTextFieldOnKeyPressed" prefHeight="40.0" prefWidth="342.0" styleClass="text-field" text="jdoe" />
      <Label alignment="CENTER_RIGHT" layoutX="30.0" layoutY="200.0" prefHeight="40.0" prefWidth="186.0" styleClass="label-normal" text="Password">
         <font>
            <Font name="Agency FB Bold" size="60.0" />
         </font>
      </Label>
      <PasswordField fx:id="loginPasswordField" layoutX="229.0" layoutY="200.0" prefHeight="40.0" prefWidth="342.0" styleClass="password-field" text="password123" />
      <Button layoutX="461.0" layoutY="274.0" mnemonicParsing="false" onAction="#loginButtonOnAction" prefHeight="31.0" prefWidth="110.0" text="Login">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="59.0" layoutY="274.0" mnemonicParsing="false" onAction="#signUpButtonOnAction" prefHeight="56.0" prefWidth="139.0" text="Sign Up">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
